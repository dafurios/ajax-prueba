<h1>Enterprises</h1>


<div class="col-md-8" id="empresas">


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enterprises.each do |enterprise| %>
      <tr>
        <td><%= enterprise.name %></td>
        <td><%= link_to 'Show', enterprise %></td>
        <td><%= link_to 'Edit', edit_enterprise_path(enterprise) %></td>
        <td><%= link_to 'Destroy', enterprise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<br>

<div class="row" id="nuevaempresa">
   <%#= link_to 'New Enterprise', new_enterprise_path %>

<%= form_with(model: @enterprise) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :enterprise_name %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-xs btn-success' %>
  </div>
<% end %>
</div>

